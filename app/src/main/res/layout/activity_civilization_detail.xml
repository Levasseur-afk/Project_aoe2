<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Civilization.CivilizationDetailActivity">

    <ImageView
        android:id="@+id/civ_icon_detail"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="fitStart"
        android:src="@drawable/placeholder"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/civ_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/lobster"/>


    <TextView
        android:id="@+id/civ_army_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expansion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto"
            android:text="@string/expansion"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/civ_expansion"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/placeholder" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/unique_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/civ_unique_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto"
        android:text="@string/unique_units"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/unique_techs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/civ_unique_tech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto"
            android:text="@string/unique_technologies"/>

    </LinearLayout>


    <TextView
        android:id="@+id/civ_team_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto"/>

    <LinearLayout
        android:id="@+id/civ_bonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_civ_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto"
            android:text="@string/civ_bonus_txt"/>

    </LinearLayout>

</LinearLayout>